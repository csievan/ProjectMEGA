<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.weitan.projectmega.activity.Menu">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="114dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/alert"
        android:layout_width="wrap_content"
        android:layout_height="113dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="104dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/alerts"
        app:layout_constraintLeft_toRightOf="@+id/profile"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/Exercise"
        android:layout_width="wrap_content"
        android:layout_height="113dp"
        android:layout_gravity="right"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="105dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/legs"
        app:layout_constraintLeft_toRightOf="@+id/alert"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Result"
        android:layout_width="wrap_content"
        android:layout_height="113dp"
        android:layout_gravity="right"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="21dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile" />

    <Button
        android:id="@+id/plan"
        android:layout_width="wrap_content"
        android:layout_height="113dp"
        android:layout_gravity="right"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="29dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/plan"
        app:layout_constraintLeft_toRightOf="@+id/Result"
        app:layout_constraintTop_toBottomOf="@+id/alert" />

</android.support.constraint.ConstraintLayout>
