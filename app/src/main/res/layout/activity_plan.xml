<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background"
                android:orientation="vertical"
                tools:context="com.example.weitan.projectmega.activity.Plan">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>


    <TextView
        android:id="@+id/ExWeek"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginTop="50dp"
        android:text="Exercises per week"
        android:layout_marginLeft="50dp"
        android:textColor="#9c9c9c"
        android:textSize="20dp"
        android:layout_below="@+id/imageView" />

    <NumberPicker
        android:id="@+id/exWeekInput"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_alignTop="@id/ExWeek"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_alignRight="@id/ExWeek"></NumberPicker>


    <TextView
        android:id="@+id/ExDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercises duration"
        android:textSize="20dp"
        android:textColor="#9c9c9c"
        android:layout_marginTop="20dp"
        android:layout_below="@id/exWeekInput"
        android:layout_marginLeft="50dp"/>





    <NumberPicker
        android:id="@+id/durationInput"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/ExDuration"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_alignRight="@+id/ExDuration"></NumberPicker>


    <TextView
        android:id="@+id/minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:text="Minutes"
        android:textSize="10dp"
        android:layout_below="@+id/durationInput"
        android:layout_alignStart="@+id/durationInput" />

    <TextView
        android:id="@+id/ExWeekend"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:text="Exercises weekends"
        android:textColor="#9c9c9c"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/minutes" />

    <RadioButton
        android:id="@+id/radioExeWeekend"
        android:layout_width="32dp"
        android:layout_height="27dp"
        android:layout_below="@+id/ExWeekend"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ExWeekend"
        android:layout_marginRight="50dp"
        android:layout_alignRight="@+id/ExWeek"
        android:text="true"/>
    <!--android:onClick="checkWeekend"-->

    <Button
        android:id="@+id/Next"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="152dp"
        android:background="@android:color/transparent"
        android:text="NEXT"
        android:textColor="#263b59"
        android:textSize="10pt"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick=""/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ExWeekend"
        android:layout_below="@+id/ExWeekend"
        android:layout_marginTop="45dp"
        android:text="TextView" />


</RelativeLayout>
