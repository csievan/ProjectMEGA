<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.weitan.projectmega.activity.sign_up2">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="142dp"
        android:layout_marginTop="117dp"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_with_stroke"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.08" />

    <TextView
        android:id="@+id/AgeNo"
        android:layout_width="83dp"
        android:layout_height="43dp"
        android:layout_marginBottom="186dp"
        android:layout_marginLeft="59dp"
        android:background="@drawable/border_grey"
        android:ems="10"
        android:inputType="number"
        android:padding="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="35dp" />

    <TextView
        android:id="@+id/HeightNo"
        android:layout_width="83dp"
        android:layout_height="43dp"
        android:layout_marginBottom="185dp"
        android:background="@drawable/border_grey"
        android:ems="10"
        android:inputType="number"
        android:padding="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/AgeNo"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="35dp" />

    <TextView
        android:id="@+id/WeightNo"
        android:layout_width="83dp"
        android:layout_height="43dp"
        android:layout_marginBottom="185dp"
        android:background="@drawable/border_grey"
        android:ems="10"
        android:inputType="number"
        android:padding="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/HeightNo"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.203" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGE"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="167dp"
        android:layout_marginLeft="66dp"
        android:textColor="#c5c5c5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="65dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="56dp"
        android:layout_height="18dp"
        android:text="HEIGHT"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="166dp"
        android:layout_marginLeft="164dp"
        android:textColor="#c5c5c5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="174dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEIGHT"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="167dp"
        android:layout_marginLeft="282dp"
        android:textColor="#c5c5c5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="284dp" />

    <TextView
        android:id="@+id/HeightCM"
        android:layout_width="36dp"
        android:layout_height="22dp"
        android:text="(cm)"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="146dp"
        android:layout_marginLeft="174dp"
        android:textColor="#c5c5c5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="183dp" />

    <TextView
        android:id="@+id/WeightKG"
        android:layout_width="28dp"
        android:layout_height="21dp"
        android:text="(kg)"
        android:layout_marginLeft="299dp"
        android:textColor="#c5c5c5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="145dp"
        android:layout_marginStart="295dp" />


    <EditText
        android:id="@+id/ProfileName"
        android:layout_width="214dp"
        android:layout_height="31dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:hint="Name"
        android:ellipsize="start"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#263b59"
        android:textSize="10pt"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="226dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.125" />

    <TextView
        android:id="@+id/MembershipDate"
        android:layout_width="169dp"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:text="Member Since "
        android:ellipsize="start"
        android:gravity="center"
        android:textColor="#c5c5c5"
        android:textSize="7pt"
        android:textStyle="italic"
        android:layout_marginLeft="108dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/ProfileName"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageButton
        android:id="@+id/MenuButton"
        android:layout_width="52dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/menu_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="166dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.07" />

</android.support.constraint.ConstraintLayout>
